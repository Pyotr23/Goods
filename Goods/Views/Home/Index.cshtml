@(Html.DevExtreme().DataGrid<Good>()
                .ShowBorders(true)
                .Paging(paging => paging.PageSize(30))
                .Pager(pager =>
                {
                    pager.ShowPageSizeSelector(true);
                    pager.AllowedPageSizes(new List<int> { 20, 30, 50 });
                    pager.ShowInfo(true);
                })
                .Selection(s => s
                    .Mode(SelectionMode.Multiple)
                    .Deferred(true))
                .Columns(c =>
                {
                    c.AddFor(m => m.Id).Caption("Kod tovara").Visible(false);
                    c.AddFor(m => m.Description).Caption("Naimenovanie");
                    c.AddFor(m => m.Quantity).Format("#,##0.##").Caption("Koli4estvo");
                    c.AddFor(m => m.Unit).Caption("Ed.izm.");
                    c.AddFor(m => m.Price).Format("#,##0.##").Caption("Cena");
                    c.AddFor(m => m.CreationDate).Format("dd.mm.yyyy hh:mm:ss").Caption("Data sozdaniya").Visible(DateTime.Now.Day % 2 == 0);
                })
                //.FilterRow(f => f.Visible(true))
                .DataSource(Model, new string[] { "Id" })
)

